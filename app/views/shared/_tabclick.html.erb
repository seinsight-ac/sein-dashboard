$(".navbar-header").click(function() {
	if ($("<%= idw %>").hasClass("active")) {
		if ($("body").hasClass("mini-navbar")) {
			$("<%= linechartid %>").sparkline(<%= data7d %>, {
				type: 'line',
				width: '110%',
				height: '60',
				lineColor: '#1ab394',
				fillColor: "#ffffff"
			}); 
		}	else {
			$("<%= linechartid %>").sparkline(<%= data7d %>, {
				type: 'line',
				width: '90%',
				height: '60',
				lineColor: '#1ab394',
				fillColor: "#ffffff"
			}); 
		}
	}	else if ($("<%= idm %>").hasClass("active")) {
				if ($("body").hasClass("mini-navbar")) {
			$("<%= linechartid %>").sparkline(<%= data30d %>, {
				type: 'line',
				width: '110%',
				height: '60',
				lineColor: '#1ab394',
				fillColor: "#ffffff"
			}); 
		}	else {
			$("<%= linechartid %>").sparkline(<%= data30d %>, {
				type: 'line',
				width: '90%',
				height: '60',
				lineColor: '#1ab394',
				fillColor: "#ffffff"
			}); 
		}
	};
});

